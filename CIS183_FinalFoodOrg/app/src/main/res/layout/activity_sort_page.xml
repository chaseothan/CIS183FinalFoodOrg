<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdbf9d"
    tools:context=".SortPage">

    <ImageView
        android:id="@+id/btn_v_sortPage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blankbutton" />

    <ImageView
        android:id="@+id/btn_v_sortPage_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="@+id/btn_v_sortPage_name"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_sortPage_name"
        app:srcCompat="@drawable/blankbutton" />

    <ImageView
        android:id="@+id/btn_v_sortPage_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="@+id/btn_v_sortPage_amount"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_sortPage_amount"
        app:srcCompat="@drawable/blankbutton" />

    <ImageView
        android:id="@+id/btn_v_sortPage_expdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="@+id/sw_v_sortPage_switch"
        app:layout_constraintStart_toStartOf="@+id/btn_v_sortPage_cost"
        app:layout_constraintTop_toTopOf="@+id/tv_v_sortPage_cost"
        app:srcCompat="@drawable/blankbutton" />

    <Switch
        android:id="@+id/sw_v_sortPage_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="descending"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_sortPage_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/porter_sans_inline_block"
        android:text="Name"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_v_sortPage_name" />

    <TextView
        android:id="@+id/tv_v_sortPage_expDate"
        android:layout_width="166dp"
        android:layout_height="61dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/porter_sans_inline_block"
        android:text="Experation      Date:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_sortPage_expdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_sortPage_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/porter_sans_inline_block"
        android:text="Cost"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_v_sortPage_cost" />

    <TextView
        android:id="@+id/tv_v_sortPage_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/porter_sans_inline_block"
        android:text="Amount"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/btn_v_sortPage_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_v_sortPage_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@+id/sw_v_sortPage_switch"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_sortPage_expdate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/listbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>